@model eHotel.Models.Room

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "RoomsAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="tag-header">
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            <h4>Add new room</h4>
        </div>
        <hr />
        <div class="row" style="padding: 20px 0">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="form-image">
                            <i class="ion-upload"></i>
                            <img src="~/Uploads/default.jpg" id="img_tag" />
                            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control input-post-image", @type = "file", @id = "inputImage" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.EditorFor(model => model.RoomNumber, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.RoomNumber, htmlAttributes: new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.LabelFor(model => model.StatusId, "Status", htmlAttributes: new { @class = "form-label", placeholder = " " })
                    @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.DropDownList("TypeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.LabelFor(model => model.TypeId, "Type", htmlAttributes: new { @class = "form-label", placeholder = " " })
                    @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="button-form">
                        <button type="submit" class="btn">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



