@model eHotel.Models.Status

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="tag-header">
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            <h4>Add new status</h4>
        </div>
        <hr />
        <div style="padding: 20px 0">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", placeholder = " " } })
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "form-label" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="button-form">
                    <button type="submit" class="btn">Add</button>
                </div>
            </div>
        </div>
    </div>
}

